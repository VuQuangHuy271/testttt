    <div class="container">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h2 class="text-center">Edit Product</h2>
			</div>
			<div class="panel-body">
                <form action="editBooks" method="post">
					<input type="hidden" name="txtId" value="{{product._id}}">					
                    <div class="form-group">			
						<label for="name">Name:</label>
						<input required="true" type="text" class="form-control" name="txtName" value="{{product.name}}">
					</div>
                    <div class="form-group">
                        <label for="price">Price:</label>
                        <input required="true" type="number" class="form-control" name="txtPrice" value="{{product.price}}">
					</div>      
					<div class="form-group">			
						<label for="name">Author:</label>
						<input required="true" type="text" class="form-control" name="txtAuthor" value="{{product.author}}">
					</div>            
                    <div class="form-group">
                        <label for="name">Description:</label>
                        <input required="true" type="text" class="form-control" name="txtDescription" value="{{product.description}}">
					</div>
                    <div class="form-group">
                        <label for="name">Picture URL:</label>
                        <input required="true" type="text" class="form-control" name="txtPicURL" value="{{product.picURL}}">
					</div>
                    <input type="submit" value="Insert" class = "btn btn-success">
            </form>
            </div>
		</div>
	</div>
</html>