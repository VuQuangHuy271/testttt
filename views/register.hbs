<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">


<div class="container"> 
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <header class="card-header">
                    <a href="/login" class="float-right btn btn-outline-primary mt-1">Log in</a>
                    <h4 class="card-title mt-2">Sign up</h4>
                </header>
                <article class="card-body">
                <form action="/register" method="post">
                    <div class="form-row">
                        <div class="col form-group">
                            <label>Name </label>   
                            <input required="true" type="text" class="form-control" placeholder="" name="txtName" value="{{oldValues.name}}">
                        </div> <!-- form-group end.// -->
                        <div class="col form-group">
                            <label>Phone number</label>
                            <input required="true" id = "phone" type="text" class="form-control" placeholder=" " name="txtPhone" value="{{oldValues.phone}}">
                        </div> <!-- form-group end.// -->
                        
                    </div> <!-- form-row end.// -->
                    <div style="text-align: right;"><span style="color: red ; ">{{errorD}}</span></div>
                    <span style="color: red;">{{errorNa}}</span>
                    <span style="color: red;">{{errorPhones}}</span>
                    <div class="form-group">
                        <label>Email address</label>
                        <input required="true" type="email" class="form-control" placeholder="" name="txtEmail" value="{{oldValues.email}}">
                        <small class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div> <!-- form-group end.// -->
                    <span style="color: red ; ">{{errorE}}</span></div>
                    <div class="form-group" >
                        <label class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="txtGender" value="Male">
                        <span class="form-check-label" > Male </span>
                        </label>
                        <label class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="txtGender" value="Female">
                        <span class="form-check-label"> Female</span>
                        </label>
                    </div> <!-- form-group end.// -->
                    <div class="form-row">
                        <div class="form-group col-md-6">
                        <label>City</label>
                        <input required="true" type="text" class="form-control" name="txtCity" value="{{oldValues.city}}">
                        </div> <!-- form-group end.// -->
                        <div class="form-group col-md-6">
                        <label>Country</label>
                        <select id="inputState" class="form-control" name = "txtCountry" value="{{oldValues.country}}">
                            <option> Choose...</option>
                            <option>Uzbekistan</option>
                            <option>Russia</option>
                            <option >United States</option>
                            <option>India</option>
                            <option selected="">Việt Nam</option>
                        </select>
                        </div> <!-- form-group end.// -->
                    </div> <!-- form-row.// -->
                    <div class="form-group">
                        <label>Create password</label>
                        <input required="true" class="form-control" type="password" name = "txtPassword" value="{{oldValues.password}}">
                        <label>Confirm password</label>
                        <input required="true" class="form-control" type="password" name = "txtConfirm">
                        
                    </div> <!-- form-group end.// -->  
                    <span style="color: red;">{{errorCon}}</span>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block"> Register  </button>
                    </div> <!-- form-group// -->      
                    <small class="text-muted">By clicking the 'Sign Up' button, you confirm that you accept our <br> Terms of use and Privacy Policy.</small>                                          
                </form>
                </article> <!-- card-body end .// -->
            <div class="border-top card-body text-center">Have an account? <a href="/login">Log In</a></div>
        </div> <!-- card.// -->
    </div> <!-- col.//-->
</div> 
<br><br>
</article>

